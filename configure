	 s#@mpicc@#${mpicc}#;
	 s#@mpirun@#${mpirun}#;
	 s#@mathjax@#${mathjax%/}#;
	 s#@c_suppress_warnings@#${c_suppress_warnings}#;
	 s#@XA@#${XA}#;
	 s#@XO@#${XO}#;
	 s#@XS@#${XS}#;
