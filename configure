fi
if [ "x${nvecpthreads_enabled}" = x1 ]; then
echo "#define SUNDIALS_ML_PTHREADS" >> src/config.h
fi
if [ "x${nvecopenmp_enabled}" = x1 ]; then
echo "#define SUNDIALS_ML_OPENMP" >> src/config.h
fi
